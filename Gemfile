# frozen_string_literal: true

# Na pasta do projeto inserir no terminal o seguinte comando:
# bundle install para instalar as gems necessarias no projeto
# Na pasta do projeto inicie o cucumber com o comando: cucumber --init

source 'https://rubygems.org'

# Ambiente que as gems funcionarao e estarao disponiveis: test
group :test do
  gem 'capybara'
  gem 'colorize'
  gem 'cucumber'
  gem 'rspec'
  gem 'selenium-webdriver'
end
